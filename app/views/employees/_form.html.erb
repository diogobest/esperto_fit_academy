
<%= bootstrap_form_for @employee, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4" do |f| %>
  <%= f.text_field :name %>
  <%= f.select(:status, Employee.statuses.keys.map { |key| [t("enum.employee.status.#{key}"), key]}) %>  
  <%= f.collection_select(:gym_id, Gym.all, :id, :name) %>
  <%= f.text_field :email %>
  <%= f.password_field :password  %>
  <%= f.submit 'Enviar' %>
<% end %>
<%= flash[:alert] %>

<% if @employee.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @employee.errors.full_messages.each do |message| %>
      <li> <%= message %>
    <% end %>
    </ul>
  </div>
<% end %>
