FROM nginx
RUN apt-get update -qq && apt-get -y install apache2-utils
ENV RAILS_ROOT /espertofit_academy
WORKDIR /etc/nginx/conf.d/

RUN mkdir sites-enabled/
RUN mkdir sites-available/

COPY nginx/nginx.conf /etc/nginx/conf.d/
COPY nginx/nginx.conf /etc/nginx/conf.d/sites-enabled/
COPY nginx/nginx.conf /etc/nginx/conf.d/sites-available/

#RUN envsubst '$RAILS_ROOT' < /etc/nginx/conf.d/nginx.conf > /etc/nginx/conf.d/default.conf
CMD [ "nginx", "-g", "daemon off;" ]